@model List<Book>
@{
    double sum = 0;
    foreach(Book book in Model)
    {
        sum += (book.SalePrice * (100 - book.DisPercent) / 100);
    }
}
<div class="cart-block">
    <div class="cart-total">
        <span class="text-number">
            1
        </span>
        <span class="text-item">
            Shopping Cart
        </span>
        <span class="price">
            £@sum
            <i class="fas fa-chevron-down"></i>
        </span>
    </div>
    <div class="cart-dropdown-block">
@foreach (Book book in Model)
{
    <div class=" single-cart-block ">
        <div class="cart-product">
            <a href="product-details.html" class="image">
                <img src="~/assets/image/products/@book.BookImages?.FirstOrDefault(i=>i.IsPrimary==true)?.ImageUrl" alt="">
            </a>
            <div class="content">
                <h3 class="title">
                    <a href="product-details.html">
                        @book.Title
                    </a>
                </h3>
                <p class="price"><span class="qty">1 ×</span> £@(book.SalePrice * (100 - book.DisPercent) / 100)</p>
                <button class="cross-btn"><i class="fas fa-times"></i></button>
            </div>
        </div>
    </div>
}
        <div class=" single-cart-block ">
            <div class="btn-block">
                <a href="cart.html" class="btn">
                    View Cart <i class="fas fa-chevron-right"></i>
                </a>
                <a href="checkout.html" class="btn btn--primary">
                    Check Out <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>